---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant="tekstlink", size = "default"} = Astro.props; 


//Definer den styling (Tailwind classes), der gør sig gældende for alle knapper
const linkStyling = "";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
    "tekstlink": "underline",
    "primary": "btn my-2 btn-primary",
    "secondary": "btn my-2 btn-secondary",
    "accent": "btn my-2 btn-accent",
    "info": "btn my-2 btn-info",
    "success": "btn my-2 btn-success",
    "warning": "btn my-2 btn-warning",
    "error": "btn my-2 btn-error",
    "neutral": "btn my-2 btn-neutral",
}

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser
const sizeClasses = {
    "default": "",
    "large": "btn-lg",
    "medium": "",};
---

<a href={href} target={target} class:list={[linkStyling,
variantClasses[variant], sizeClasses[size]]}><slot /></a>