---
const {url="", cardimage="", cardimagealt="", cardtitel="", cardtekst="", cardbuttontekst="", badgenyt="false", badgerabat="false", badgefaatilbage="false"} = Astro.props;

---

<div class="card bg-base-100 w-full shadow-sm @container">
  <figure class="relative">
{(badgenyt === "true") && <div class="badge badge-primary absolute top-4 left-0">Ny vin!</div>}
{(badgerabat !== "false") && <div class="badge badge-secondary absolute top-4 right-0"><span>{badgerabat} % rabat! </span></div>}
{(badgefaatilbage === "true") && <div class="badge badge-warning absolute bottom-4 left-0">FÃ¥ flasker tilbage!</div>}   

<img
      src={cardimage}
      alt={cardimagealt}
    />
  </figure>
  <div class="card-body">
    <h2 class="card-title">{cardtitel}</h2>
    <p>{cardtekst}</p>
    <div class="card-actions justify-end">
      <button class="btn btn-primary">{cardbuttontekst}</button>
    </div>
  </div>
</div>